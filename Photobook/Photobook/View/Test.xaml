<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Photobook.View.Test">

    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Items}"
                       x:Name="ItemsListView" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label>Tekst her</Label>
                                <Image Source="{Binding ImgUri}" HorizontalOptions="FillAndExpand" 
                                       Margin="1,3,1,3" WidthRequest="40" HeightRequest="40"></Image>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>